# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       							Application.index
GET		/opendatacard														Application.card

# About page
GET     /about                                  							Application.about

# Contact form
GET     /contact                                							Application.contact
POST    /contact                                							Application.sendContact

# Admin - step1
GET 	/opendatacard/search												OpendataCard.getSearchGeoZone
POST 	/opendatacard/search												OpendataCard.searchGeoZone
GET		/opendatacard/level/{<[0-9]+>level}/id/{<[0-9]+>id}					OpendataCard.card
POST	/opendatacard/level/{<[0-9]+>level}/id/{<[0-9]+>id}					OpendataCard.saveCard

# Ignore favicon requests
GET     /favicon.ico                            							404

*		/																	module:securesocial

# Map static resources from the /app/public folder to the /public path
GET     /public/                                							staticDir:public

# Catch all
*       /{controller}/{action}                  							{controller}.{action}
