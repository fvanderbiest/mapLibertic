# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       							Application.index

# Map page
GET		/map																Map.index
GET		/map/info															Map.onClick

# About page
GET     /about                                  							Application.about

# Contact form
GET     /contact                                							Application.contact
POST    /contact                                							Application.sendContact

# Admin - step1
GET 	/geozone/search														Search.geoZoneForm
POST 	/geozone/search														Search.geoZoneResult
GET		/card/level/{<[0-9]+>level}/id/{<[0-9]+>id}							Card.view
POST	/card/level/{<[0-9]+>level}/id/{<[0-9]+>id}							Card.save

# Admin - adding city
GET 	/city																City.edit
POST	/city																City.save

# Ignore favicon requests
GET     /favicon.ico                            							404

*		/																	module:securesocial

# Map static resources from the /app/public folder to the /public path
GET     /public/                                							staticDir:public

# Catch all
*       /{controller}/{action}                  							{controller}.{action}
