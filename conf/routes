# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       							Application.index

# Map page
GET		/map																Map.index
GET		/map/opendatacard													Map.card

# About page
GET     /about                                  							Application.about

# Contact form
GET     /contact                                							Application.contact
POST    /contact                                							Application.sendContact

# Admin - step1
GET 	/crud/opendatacard/search												crud.OpendataCard.getSearchGeoZone
POST 	/crud/opendatacard/search												crud.OpendataCard.searchGeoZone
GET		/crud/opendatacard/level/{<[0-9]+>level}/id/{<[0-9]+>id}					crud.OpendataCard.card
POST	/crud/opendatacard/level/{<[0-9]+>level}/id/{<[0-9]+>id}					crud.OpendataCard.saveCard

# Admin - adding city
GET 	/crud/city																crud.City.city
POST	/crud/city																crud.City.saveCity

# Ignore favicon requests
GET     /favicon.ico                            							404

*		/																	module:securesocial

# Map static resources from the /app/public folder to the /public path
GET     /public/                                							staticDir:public

# Catch all
*       /{controller}/{action}                  							{controller}.{action}
